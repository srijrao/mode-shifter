{
  "compilerOptions": {
  // Skip type-checking of declaration files in node_modules. This is a
  // pragmatic, low-risk setting for editor/CI checks to avoid failures
  // coming from third-party type packages that are unrelated to our code.
  "skipLibCheck": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
